{
	"name": "$t:calendar",
	"version": "1.0.0",
	"datatypes": {
		"DATE": null
	},
	"options": {
    "min": {
      "name": "$t:min",
      "comment": "$t:min_comment",
      "interface": "date"
    },
    "max": {
      "name": "$t:max",
      "comment": "$t:max_comment",
      "interface": "date"
    },
    "formatting": {
      "name": "$t:formatting",
      "comment": "$t:formatting_comment",
      "interface": "toggle",
      "type": "BOOLEAN",
      "default": true
    }
  },
  "translation": {
    "en-US": {
      "calendar": "Calenlar",
      "min": "Minimum date",
      "min_comment": "Minimum date that can be chosen by the user",
      "max": "Maximum date",
      "max_comment": "Maximum date that can be chosen by the user",
      "formatting": "Sunday/Monday",
      "formatting_comment": "Set calendar to start on Sunday or Monday",
      "enableTime": "Show time",
      "enableTime_comment": "Set calendar to show time"
    }
  }
}