{
	"name": "$t:calendar",
	"version": "1.0.0",
	"datatypes": {
		"DATE": null
	},
	"options": {
    "min": {
      "name": "$t:min",
      "comment": "$t:min_comment",
      "interface": "date"
    },
    "max": {
      "name": "$t:max",
      "comment": "$t:max_comment",
      "interface": "date"
    },
    "formatting": {
      "name": "$t:formatting",
      "comment": "$t:formatting_comment",
      "interface": "text-input",
      "options": {
        "placeholder": "eg: dddd, mmmm d, yyyy"
      },
      "length": 50
    },
    "localized": {
      "name": "$t:localized",
      "comment": "$t:localized_comment",
      "interface": "toggle",
      "default": true
    }
  },
  "translation": {
    "en-US": {
      "calendar": "Calenlar",
      "min": "Minimum date",
      "min_comment": "Minimum date that can be chosen by the user",
      "max": "Maximum date",
      "max_comment": "Maximum date that can be chosen by the user",
      "formatting": "date format",
      "formatting_comment": "If left blank, a relative date will be used (refer to https://www.npmjs.com/package/dateformat)",
      "localized": "Localized",
      "localized_comment": "Show the date localized in the output"
    }
  }
}