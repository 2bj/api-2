{
  "name": "@directus/extensions-builder",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "postinstall": "npx recursive-install --skip-root",
    "prebuild": "rm -rf $npm_package_PATH_EXTENSIONS_DIR/{interfaces,layouts,pages}",
    "build": "parcel build \"core/**/*.vue\" -d $npm_package_PATH_EXTENSIONS_DIR --no-source-maps --global __DirectusExtension__ && cpx \"$npm_package_PATH_JSON_FILES\" $npm_package_PATH_EXTENSIONS_DIR -t ./json-minifier.js -v && cpx \"$npm_package_PATH_PHP_FILES\" $npm_package_PATH_EXTENSIONS_DIR",
    "dev": "cpx \"$npm_package_PATH_STATIC_FILES\" $npm_package_PATH_EXTENSIONS_DIR && concurrently --raw \"cpx $npm_package_PATH_STATIC_FILES $npm_package_PATH_EXTENSIONS_DIR -w\" \"parcel watch core/**/*.vue -d $npm_package_PATH_EXTENSIONS_DIR --no-source-maps --global __DirectusExtension__\"",
    "lint": "vue-cli-service lint \"core/**/*.vue\"",
    "fix": "prettier --write \"core/**/*.{js,vue}\""
  },
  "author": "Rijk van Zanten <rijkvanzanten@me.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.3",
    "@vue/cli-service": "^3.0.0-rc.3",
    "@vue/component-compiler-utils": "^2.0.0",
    "@vue/eslint-config-prettier": "^3.0.0-rc.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^3.6.0",
    "cpx": "^1.5.0",
    "jsonminify": "^0.4.1",
    "node-sass": "^4.9.0",
    "parcel": "^1.9.2",
    "recursive-install": "^1.3.0",
    "through2": "^2.0.3",
    "vue-template-compiler": "^2.5.16"
  },
  "dependencies": {
    "vue": "^2.5.16",
    "vue-hot-reload-api": "^2.3.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "PATH": {
    "JSON_FILES": "core/**/meta.json",
    "PHP_FILES": "core/**/{hooks.php,endpoints.php}",
    "STATIC_FILES": "core/**/{meta.json,hooks.php,endpoints.php}",
    "EXTENSIONS_DIR": "../public/extensions/core"
  }
}
