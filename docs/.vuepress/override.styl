// Color Variables
$accentColor = #3498DB
$textColor = #2c3e50
$borderColor = #eeeeee // eaecef
$codeBgColor = #282c34

// Nav underline
.nav-item > a:hover,
.nav-item > a.router-link-active {
    border-bottom: 2px solid #3498DB;
}

// "Tip" accent
.custom-block.tip {
    border-color: #3498DB !important;
}

// Main code color
.token.property,
.token.class-name,
.token.constant,
.token.symbol {
    color: #4FC3F7; // f8c555
}

// Main code string
.token.string,
.token.char,
.token.attr-value,
.token.regex,
.token.variable {
    color: #FFFFFF; // 7ec699
}

// Code
.token.boolean,
.token.number,
.token.function {
    color: #4FC3F7; // f08d49
}

// Operator
.token.operator,
.token.entity,
.token.url {
    color: #B39DDB;
}

.content pre,
.content pre[class*="language-"] {
    border-radius: 3px !important;
}
