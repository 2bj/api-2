{
  "name": "JSON",
  "version": "1.0.0",
  "dataTypes": {
    "TEXT": null,
    "TINYTEXT": null,
    "MEDIUMTEXT": null,
    "LONGTEXT": null,
    "VARCHAR": 255
  },
  "options": {
    "placeholder": {
      "interface": "text-input",
      "comment": "Enter placeholder text",
      "length": 200
    },
    "indent": {
      "interface": "text-input",
      "comment": "What character(s) to use as indentation",
      "defaultValue": "\t"
    },
    "onlyAllowValidJson": {
      "interface": "toggle",
      "comment": "Only allow valid JSON to be saved to the DB",
      "defaultValue": true
    }
  }
}
