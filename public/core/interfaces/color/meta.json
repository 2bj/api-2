{
  "name": "example",
  "version": "1.0.0",
  "dataTypes": {
    "VARCHAR": 30,
    "CHAR": 30
  },
  "options": {
    "input": {
      "interface": "dropdown",
      "comment": "The unit in which the user will enter the data",
      "defaultValue": "hex",
      "options": {
        "choices": {
          "hex": "Hex",
          "rgb": "RGB",
          "hsl": "HSL",
          "cmyk": "CMYK"
        }
      }
    },
    "output": {
      "interface": "dropdown",
      "comment": "The unit in which the data gets saved to the DB",
      "defaultValue": "hex",
      "options": {
        "choices": {
          "hex": "Hex",
          "rgb": "RGB",
          "hsl": "HSL",
          "cmyk": "CMYK"
        }
      }
    },
    "formatValue": {
      "interface": "toggle",
      "comment": "Show value as color swatch",
      "defaultValue": true
    },
    "palette": {
      "interface": "tags",
      "comment": "Add color options as hex values",
      "options": {
        "wrapWithDelimiter": false
      },
      "defaultValue": [
        "#f44337", "#3f51b5", "#2196f3", "#ffeb3a", "#ff9802"
      ]
    },
    "paletteOnly": {
      "interface": "toggle",
      "comment": "Only allow the user to pick from the palette",
      "defaultValue": false
    },
    "allowAlpha": {
      "interface": "toggle",
      "comment": "Allow values with an alpha channel",
      "defaultValue": false
    }
  }
}
