{
  "name": "tags",
  "version": "1.0.0",
  "dataTypes": {
    "VARCHAR": 100,
    "CHAR": 10,
    "TINYTEXT" : null,
    "TEXT": null
  },
  "options": {
    "forceLowercase": {
      "interface": "toggle",
      "comment": "Convert all tags to lowercase",
      "defaultValue": true
    },
    "wrapWithDelimiter": {
      "interface": "toggle",
      "comment": "Wrap the values with a pair of delimiters to allow strict searching for a single value",
      "defaultValue": true
    },
    "formatValue": {
      "interface": "toggle",
      "comment": "Use Directus' formatting logic",
      "defaultValue": false
    }
  }
}
